<div class="col-md-12">
  <div class="group">

    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@team) %>
        <label class="label label-success"> 团队成员 </label>
        <%= link_to("Quit Team", quit_team_path(@team), method: :post, class: "btn btn-default") %>
      <% else %>
        <label class="label label-warning"> 不是团队成员 </label>
        <%= link_to("Join Team", join_team_path(@team), method: :post, class: "btn btn-default") %>
      <% end %>
    </span>

    <% if current_user && current_user == @team.user %>
    <%= link_to("Edit", edit_team_path(@team), class: "btn btn-primary pull-right")%>
    <% end %>
    <%= link_to("New Project", new_team_project_path(@team), class: "btn btn-default pull-right")%>
  </div>


  <h2><%= @team.title %></h2>
  <p><%= @team.description %></p>

    <table class="table">
      <thead>
       <tr>
          <th>项目名称</th>
          <th>创建者</th>
          <th>创建时间</th>
        </tr>
      </thead>
      <tbody>
        <% @projects.each do |project| %>
          <tr>
            <td><%= project.title %></td>
            <td><%= project.user.email %></td>
            <td><%= project.created_at %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>
